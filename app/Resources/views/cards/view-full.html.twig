{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-9">
            {% for card in cards %}
                <div class="row">
                    <div class="col-7">
                        {% include 'cards/card-text.html.twig' with { 'card': card } only %}
                    </div>
                    <div class="col-5">
                        <img src="{{ asset(card.code ~ '.jpg', 'img') }}">
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-3">
            (ad)
        </div>
    </div>
{% endblock %}
